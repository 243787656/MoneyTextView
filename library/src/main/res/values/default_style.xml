<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CurrencyTextViewDefaultStyle">
        <item name="format">@string/default_format</item>
        <item name="symbol">$</item>
        <item name="decimalSeparator">\'</item>
        <item name="baseTextSize">18sp</item>
        <item name="baseTextColor">#000000</item>
        <item name="symbolTextSize">10sp</item>
        <item name="includeDecimalSeparator">true</item>
        <item name="decimalUnderline">false</item>
        <item name="symbolMargin">1dp</item>
        <item name="decimalMargin">1dp</item>
    </style>


    <style name="CurrencyTextViewStyleA">
        <item name="baseTextSize">18sp</item>
        <item name="symbolTextSize">18sp</item>
        <item name="decimalDigitsTextSize">18sp</item>
        <item name="symbolGravity">start|bottom</item>
        <item name="decimalGravity">bottom</item>
    </style>

    <style name="CurrencyTextViewStyleB" parent="CurrencyTextViewStyleA">
        <item name="symbolGravity">end|bottom</item>
    </style>




    <style name="CurrencyTextViewStyleC" parent="CurrencyTextViewStyleA">
        <item name="decimalDigitsTextSize">12sp</item>
        <item name="decimalGravity">top</item>
    </style>

    <style name="CurrencyTextViewStyleD" parent="CurrencyTextViewStyleB">
        <item name="decimalDigitsTextSize">12sp</item>
        <item name="decimalGravity">top</item>
    </style>



    <style name="CurrencyTextViewStyleE" parent="CurrencyTextViewStyleA">
        <item name="symbolTextSize">12sp</item>
        <item name="symbolGravity">start|top</item>
    </style>

    <style name="CurrencyTextViewStyleF" parent="CurrencyTextViewStyleB">
        <item name="symbolTextSize">12sp</item>
        <item name="symbolGravity">end|top</item>
    </style>



    <style name="CurrencyTextViewStyleG" parent="CurrencyTextViewStyleC">
        <item name="symbolTextSize">12sp</item>
        <item name="symbolGravity">start|top</item>
    </style>

    <style name="CurrencyTextViewStyleH" parent="CurrencyTextViewStyleD">
        <item name="symbolTextSize">12sp</item>
        <item name="symbolGravity">end|top</item>
    </style>



    <style name="CurrencyTextViewStyleI" parent="CurrencyTextViewStyleA">
        <item name="symbol"></item>
    </style>

    <style name="CurrencyTextViewStyleJ" parent="CurrencyTextViewStyleB">
        <item name="symbol"></item>
    </style>


    <style name="CurrencyTextViewStyleK" parent="CurrencyTextViewStyleC">
        <item name="decimalUnderline">true</item>
        <item name="includeDecimalSeparator">false</item>
        <item name="decimalMargin">4dp</item>
        <item name="symbolMargin">2dp</item>
    </style>

    <style name="CurrencyTextViewStyleL" parent="CurrencyTextViewStyleK">
        <item name="symbolGravity">end|top</item>
    </style>

    <style name="CurrencyTextViewStyleM" parent="CurrencyTextViewStyleG">
        <item name="symbolGravity">start|bottom</item>
    </style>

    <style name="CurrencyTextViewStyleN" parent="CurrencyTextViewStyleH">
        <item name="symbolGravity">end|bottom</item>
    </style>
</resources>